{%
  set classes = [
  'block',
  'block--header',
  'block--branding',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>
  {% if site_name %}
    <h1 class="site-name">
      <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
    </h1>
  {% endif %}

  {% if site_slogan %}
    <div class="site-slogan"><div class="inner">{{ site_slogan }}</div></div>
  {% endif %}
</div>
